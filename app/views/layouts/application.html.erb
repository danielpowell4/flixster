<!DOCTYPE html>
<html>
  <head>
    <title>Flixster</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://vjs.zencdn.net/5.0.2/video-js.css" rel="stylesheet">
    <script src="http://vjs.zencdn.net/5.0.2/video.js"></script>
  </head>

  <body>
    <div id="wrap">
      <!-- TOP NAV -->
      <%= render 'shared/top-nav' %>

      <!-- ALERTS -->
      <% if notice.present? %>
        <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <!-- MAIN VIEW -->
      <%= yield %>
    </div>

    <br class="clr" />

    <div id="footer">
    <div class="container">
      <div class="col-xs-12 col-sm-3">
        <b>Teachers</b>
        <br />
        <%= link_to 'Teach a Course', new_instructor_course_path %>
        <br />
        <%= link_to 'My Dashboard', dashboard_path %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>About</b>
        <br />
        <%= link_to 'Team', '#' %>
        <br />
        <%= link_to 'Careers', '#' %>
        <br />
        <%= link_to 'Privacy Policy', '#' %>
      </div>
      <div class="col-xs-12 col-sm-3">
        <b>Contact</b>
        <br />
        beaconthedog@gmail.com
        <br />
        1600 Penn Ave
        <br />
        Washington DC, USA 011131
      </div>
      <div class="col-xs-12 col-sm-3 social">
        <b>Social</b>
        <p>jk we don't social</p>
      </div>
    </div>
  </div>
  </body>
</html>
